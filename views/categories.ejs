<h1 class="pb-4">Event Categories</h1>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item"><a href="/categories">Categories</a></li>
    <li class="breadcrumb-item active" aria-current="page">Explore Categories</li>
  </ol>
</nav>

<div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3 mb-4" id="Categoriesrow">
  <% if(typeof categories !== 'undefined' && categories.length > 0) { %>
    <% categories.forEach(function(category, index) { %>
      <a href="/categories/<%- category.name %>" class="col text-center category__link" style="padding: 50px; width: 50em">
          <%- category.name %>
        <div class="category__img shadow">
          <img src="/<%- category.image %>"loading="lazy">
        </div>

      </a>
    <% }) %>
  <% } %>
</div>


<div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
  <% if(typeof categoryById !== 'undefined' && categoryById.length > 0) { %>
    <% categoryById.forEach(function(event, index){ %>
    <a href="/event/<%= event._id %>" class="col text-center category__link" style="padding: 50px; width: 50em" >
      <div class="category__img category__img--large shadow">
        <img src="/eventimages/<%= event.image %>" alt="<%= event.eventname %>" loading="lazy">
      </div>
      <div class="pt-1"><%= event.eventname %></div>
    </a>
    <% }) %>
  <% } %>
</div>